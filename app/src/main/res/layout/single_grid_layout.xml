<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_itemImage"
            tools:src="@drawable/ic_cloud_black_24dp"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <TextView
            android:id="@+id/tv_itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Poflo Body Spray"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_nameOfStore"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="NAME OF SHOP, TOWN"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_itemPrice"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="N120"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_distanceFromYou"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:layout_height="match_parent"
                tools:text="1min walk"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="7dp"
                android:layout_gravity="right"
                android:src="@drawable/add"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>